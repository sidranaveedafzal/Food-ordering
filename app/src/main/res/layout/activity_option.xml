<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".option"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left">
            <ImageView
                android:id="@+id/icn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_24">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="279dp"
                android:layout_height="298dp"
                android:layout_gravity="center"
                android:src="@drawable/option">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's you in"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="40dp"
                android:fontFamily="@font/poppins_thin"
                android:layout_gravity="center">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_bars"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/facebook"
                    android:layout_marginRight="30dp">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue with Facebook"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_thin"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_bars"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/google"
                    android:layout_marginRight="30dp">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue with Google"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_thin"
                    android:layout_gravity="center"
                    android:layout_marginRight="40dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_bars"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/twitter"
                    android:layout_marginRight="30dp">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue with Twitter"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_thin"
                    android:layout_gravity="center"
                    android:layout_marginRight="40dp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="4dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/option_bars">
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:textSize="15dp"
                    android:textColor="#BAFFFFFF"
                    >

                </TextView>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="4dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/option_bars">
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/signin_btn_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#18A84B"
                android:layout_margin="8dp"
                android:text="Sign in with phone number"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_thin">
            </Button>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account?"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:layout_marginRight="5dp">

                </TextView>
                <TextView
                    android:id="@+id/signup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up"
                    android:fontFamily="@font/poppins_thin"
                    android:textColor="#1AA84B"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>