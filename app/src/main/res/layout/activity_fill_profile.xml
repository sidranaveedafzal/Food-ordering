<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fill_profile"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="top|bottom"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="top|fill"
            android:gravity="top"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/baseline_arrow_back_24">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_thin"
                android:text="Fill your profile"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/shapeableImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="#36343A"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circular"
                    app:srcCompat="@drawable/person_icn"
                    app:strokeColor="#686769"
                    app:strokeWidth="4dp">

                </com.google.android.material.imageview.ShapeableImageView>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:background="#18A84B"
                    android:layout_marginRight="5dp"
                    android:foregroundGravity="center"
                    app:contentPadding="5dp"
                    android:src="@drawable/pen_icn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/shapeableImageView"
                    app:shapeAppearanceOverlay="@style/circular">

                </com.google.android.material.imageview.ShapeableImageView>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/option_bars"
                android:hint="Full Name"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#41FFFFFF">
            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/option_bars"
                android:hint="Nick Name"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#41FFFFFF">
            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/option_bars"
                android:hint="Date of Birth"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#41FFFFFF">
            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/option_bars"
                android:hint="Email"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#41FFFFFF">
            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/option_bars"
                android:hint="Phone Number"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#41FFFFFF">
            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/option_bars"
                android:hint="Gender"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#41FFFFFF">
            </EditText>

            <Button
                android:id="@+id/contiue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#18A84B"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Continue"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_thin">
            </Button>
        </LinearLayout>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>